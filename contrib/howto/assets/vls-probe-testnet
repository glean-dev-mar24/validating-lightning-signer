#!/bin/bash

set -e

export PATH="$HOME/.cargo/bin:$PATH"
export RUST_LOG=debug

CHAIN="testnet"
RUNDIR="/home/user/vls-probe/${CHAIN}"

mkdir -p "${RUNDIR}"
cd "${RUNDIR}"

PIDFILE="${RUNDIR}/vls-probe-${CHAIN}.pid"
echo $$ > "${PIDFILE}"

trap 'rm -f "${PIDFILE}"; exit' INT TERM EXIT

probe-run --chip STM32F413ZHTx --no-flash --backtrace-limit=200 /usr/local/lib/demo_signer 2>&1 | \
    tee -a "${RUNDIR}/vls-probe-${CHAIN}.log"

# PIDFILE removal is handled by trap
